<h1>Add Artist</h1>

<% if flash[:artist_errors]%>
   <% flash[:artist_errors].each do |error| %>
      <p style="color: red;"><%= error %></p>
   <% end %>
<% end %>


<%= form_for @artist do |f| %>
   <%= f.label "Name:" %>
   <%= f.text_field :name %> <br>
   <%= f.label "Age:" %>
   <%= f.text_field :age %> <br>
   <%= f.label "Title:" %>
   <%= f.text_field :title %> <br>

   <%= f.submit %> 
<% end %>